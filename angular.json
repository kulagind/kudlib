{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "public": {
      "projectType": "library",
      "root": "projects/public",
      "sourceRoot": "projects/public/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/public/tsconfig.lib.json",
            "project": "projects/public/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/public/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/public/src/test.ts",
            "tsConfig": "projects/public/tsconfig.spec.json",
            "karmaConfig": "projects/public/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/public/tsconfig.lib.json",
              "projects/public/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "kudlib": {
      "projectType": "library",
      "root": "projects/kudlib",
      "sourceRoot": "projects/kudlib/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "projects/kudlib/tsconfig.lib.json",
            "project": "projects/kudlib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/kudlib/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/kudlib/src/test.ts",
            "tsConfig": "projects/kudlib/tsconfig.spec.json",
            "karmaConfig": "projects/kudlib/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "projects/kudlib/tsconfig.lib.json",
              "projects/kudlib/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }},
  "defaultProject": "public"
}
